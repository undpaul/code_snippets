<?php

/**
 * @file
 * This is a snippet to put at the end of settings.php, so settings
 * in local.settings.php can override those in settings.php (like database).
 */

/**
 * Include local.settings.php
 *
 * The file is in .gitignore so we can safely use it for local configs.
 */
if (file_exists('sites/default/local.settings.php')) {
  include('local.settings.php');
}

